  "description": "RWA-GPT on Polygon with cross-chain compatibility",
  "main": "index.js",
  "scripts": {
    "setup": "hardhat run scripts/setup.js",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:local": "hardhat run scripts/test-local.js --network localhost",
    "test:polygon": "hardhat run scripts/test-polygon.js --network polygonAmoy",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygonAmoy",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network polygon",
    "deploy:pushchain": "hardhat run scripts/deploy.js --network pushchain",
    "verify:polygon": "hardhat verify --network polygonAmoy",
    "verify:mainnet": "hardhat verify --network polygon",
    "verify:pushchain": "hardhat verify --network pushchain",
